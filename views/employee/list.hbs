<h3> Employee List <br> 
<a href="/employee">
<i class="fa  fa-plus"> Create New</i>

</a>

</h3>

<table class="table table-dark">
    <thead>
        <tr>
            <th> Name</th>
            <th>City</th>
            <th>Phone</th>
            <th>Trade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}

        <tr>
            <td>{{this.fullname}}</td>
            <td>{{this.city}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.trade}}</td>
            <td> 
                <a href="/employee/{{this._id}}"><i class="fa fa-pencil"> </i></a>
                <a href="/employee/delete/{{this._id}}" onclick=" return  confirm( 'are you sure you want to delete?')"> <i class="fa fa-trash"></i> </a>
                 </td>
        </tr>

        {{/each}}



    </tbody>
</table>